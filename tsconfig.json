{
  "env": {
    "browser": false,
    "es6": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2021",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "paths": {
      "@jobs/*": ["./jobs/*"],
      "@services/*": ["./services/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "rules": {
    "import/no-unresolved": "error"
  },
  "plugins": ["prettier", "@typescript-eslint", "import"],
  "include": ["**/*.ts", "__tests__/scrapers.spec.js"],
  "exclude": ["node_modules"]
}
